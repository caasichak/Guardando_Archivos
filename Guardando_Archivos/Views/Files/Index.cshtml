@model Guardando_Archivos.Models.ViewModels.FilesViewModel
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@if (ViewBag.Message != null)
{
    <div class="alert alert-success" role="alert">
        @ViewBag.Message
    </div>
}

@using (Html.BeginForm("Save", "Files", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="row">
        <div class="col-md-6 col-lg-offset-3">
            <div class="form-group">
                @Html.LabelFor(d => d.Archivo1)
                @Html.TextBoxFor(d => d.Archivo1, new { @class = "form-control", type = "file", accept = ".pdf" })
                @Html.ValidationMessageFor(d => d.Archivo1, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.Archivo2)
                @Html.TextBoxFor(d => d.Archivo2, new { @class = "form-control", type = "file", accept = ".pdf" })
                @Html.ValidationMessageFor(d => d.Archivo2, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(d => d.Archivo3)
                @Html.TextBoxFor(d => d.Archivo3, new { @class = "form-control", type = "file", accept = ".pdf" })
                @Html.ValidationMessageFor(d => d.Archivo3, "", new { @class = "text-danger" })
            </div>
            <div class="form-group" style="text-align:right;">
                <input type="submit" class="btn btn-success" value="Guardar archivos">
            </div>


        </div>
    </div>
}

@using (Html.BeginForm("Comprimir", "Files", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken();
    <div class="row">
        <div class="col-md-6 col-lg-offset-3">
            <div class="form-group" style="text-align:right;">
                <input type="submit" class="btn btn-success" value="Comprimir">
            </div>
        </div>
    </div>
} 